@model ZooMVC.Models.Specie

@{
    ViewData["Title"] = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Especie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Picture)
        </dd>
    </dl>
</div>
<div>
    <h4>Hábitats</h4>
    <hr />
    @foreach (var c in Model.HabitatsSpecies)
    {
        <li><a asp-controller="Habitats" asp-action="Details" asp-route-id="@c.Habitat.Id">@c.Habitat.Name (@c.Index)</a></li>
    }
    <hr />
</div>
<form asp-action="AddHabitat" asp-route-id="@Model.Id" method="post">

    <div class="form-group">
        <label class="control-label">Habitat:</label>
        <select name="HabitatId" class="form-control" asp-items="ViewBag.HabitatId"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Index:</label>
        <input type="text" name="Index" class="form-control">
    </div>
    <div class="form-group">
        <input type="submit" value="Añadir" class="btn btn-default" />
    </div>
</form>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
